package appiumtest;

import java.net.MalformedURLException;
import java.net.URL;

import org.openqa.selenium.remote.DesiredCapabilities;

import io.appium.java_client.AppiumDriver;
import io.appium.java_client.remote.MobileCapabilityType;

public class installingapp {
	
	static AppiumDriver driver;
	
	
	public static void main(String[] args) throws MalformedURLException {
		
		DesiredCapabilities caps = new DesiredCapabilities();
		caps.setCapability("deviceName", "Redmi 9");
		caps.setCapability("platformName", "Android");
		caps.setCapability("platformVersion", "7.0");
		caps.setCapability("app", "C:\\Users\\HK\\Downloads\\murtuza.apk");
		caps.setCapability("appPackage", "com.jbs.hk.c");
		caps.setCapability("appActivity", "com.jbs.hk.c.activity.SplashActivity");
		caps.setCapability("automationName", "Appium");

        @SuppressWarnings("deprecation")
		URL url = new URL("http://127.0.0.1:4723/wd/hub");

        driver = new AppiumDriver(url, caps);
    }
		
	
}

