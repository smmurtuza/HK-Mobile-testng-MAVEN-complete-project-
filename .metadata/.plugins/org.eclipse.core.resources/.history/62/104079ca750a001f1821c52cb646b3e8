package testcases;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.Test;
import org.openqa.selenium.Keys;

public class mytestcases extends BaseClass{
	
	@Test
	public void testlogin1(){
		
		WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(20));
		
//		WebElement  nextButton = driver.findElement(By.xpath("/hierarchy/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.FrameLayout/androidx.drawerlayout.widget.DrawerLayout/android.view.ViewGroup/android.widget.LinearLayout/android.widget.RelativeLayout/android.widget.FrameLayout[2]/android.widget.ImageView"));
//        nextButton.click();
        WebElement nextButton = wait.until(ExpectedConditions.elementToBeClickable(By.xpath("/hierarchy/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.FrameLayout/androidx.drawerlayout.widget.DrawerLayout/android.view.ViewGroup/android.widget.LinearLayout/android.widget.RelativeLayout/android.widget.FrameLayout[2]/android.widget.ImageView")));
        nextButton.click();
        
        WebElement amount = wait.until(ExpectedConditions.elementToBeClickable(By.id("")));
        amount.sendKeys("15000");
        
        System.out.println("Test1 completed");
	}
	@Test
	public void test2() throws InterruptedException{
		
		WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(20));
		
        
        WebElement amount = wait.until(ExpectedConditions.elementToBeClickable(By.id("com.jbs.hk.c:id/et_amount")));
        amount.sendKeys("15000");
        
        WebElement category = wait.until(ExpectedConditions.elementToBeClickable(By.id("com.jbs.hk.c:id/tv_title_account")));
        category.click();
        
        WebElement account = wait.until(ExpectedConditions.elementToBeClickable(By.xpath("/hierarchy/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.FrameLayout/androidx.drawerlayout.widget.DrawerLayout/android.view.ViewGroup/android.widget.LinearLayout/android.widget.RelativeLayout/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.ScrollView/android.widget.LinearLayout/android.widget.RelativeLayout[3]/androidx.recyclerview.widget.RecyclerView/android.widget.LinearLayout[1]/android.widget.RelativeLayout/android.widget.ImageView")));
        account.click();
        
        WebElement finish = wait.until(ExpectedConditions.elementToBeClickable(By.id("com.jbs.hk.c:id/btn_finish")));
        finish.click();
        
        System.out.println("Test2 completed");
        
        Thread.sleep(10000);
	}
	
	@AfterMethod
    public void tearDown() {
        if (driver != null) {
            driver.quit();
        }
    }

}
