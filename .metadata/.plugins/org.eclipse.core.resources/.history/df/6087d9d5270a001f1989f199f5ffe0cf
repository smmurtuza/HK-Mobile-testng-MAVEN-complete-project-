package appiumtest;

import java.net.MalformedURLException;
import java.net.URL;

import org.openqa.selenium.remote.DesiredCapabilities;

import io.appium.java_client.AppiumDriver;
import io.appium.java_client.remote.MobileCapabilityType;

public class installingapp {
	
	static AppiumDriver driver;
	
	
	public static void main(String[] args) throws MalformedURLException {
		
		DesiredCapabilities dc = new DesiredCapabilities();
        dc.setCapability(MobileCapabilityType.AUTOMATION_NAME, "Appium");
        dc.setCapability(MobileCapabilityType.PLATFORM_NAME, "97a606d80406");
        dc.setCapability(MobileCapabilityType.PLATFORM_VERSION,"7.0"); //Version is number here
        dc.setCapability(MobileCapabilityType.DEVICE_NAME, "Redmi 9");
        dc.setCapability("appPackage","com.jbs.hk.c");
        dc.setCapability("appActivity", "com.jbs.hk.c.activity.SplashActivity");
        dc.setCapability(MobileCapabilityType.APP, "C:\\Users\\HK\\Downloads\\2409_4_0_11.apk");

        @SuppressWarnings("deprecation")
		URL url = new URL("http://127.0.0.1:4723/wd/hub");

        driver = new AppiumDriver(url, dc);
    }
		
	
}

